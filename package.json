{
  "name": "ecommerce-monolith-foundation",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:cov": "jest --config jest.config.js --coverage",
    "test:cov:html": "jest --config jest.config.js --coverage --coverageReporters=html",
    "test:cov:text": "jest --config jest.config.js --coverage --coverageReporters=text-summary",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/config/jest-e2e.json",
    "test:e2e:api": "jest --config ./test/config/jest-e2e.json --testPathPatterns=api",
    "test:e2e:contracts": "jest --config ./test/config/jest-e2e.json --testPathPatterns=contracts",
    "test:e2e:integration": "jest --config ./test/config/jest-e2e.json --testPathPatterns=integration",
    "test:e2e:business": "jest --config ./test/config/jest-e2e.json --testPathPatterns=business-flows",
    "test:e2e:smoke": "jest --config ./test/config/jest-e2e.json --testPathPatterns=smoke",
    "test:e2e:performance": "jest --config ./test/config/jest-e2e.json --testPathPatterns=performance",
    "test:e2e:snapshots": "jest --config ./test/config/jest-e2e.json --testPathPatterns=snapshots",
    "test:snapshots:update": "jest --config ./test/config/jest-e2e.json --testPathPatterns=snapshots --updateSnapshot",
    "test:mutation": "echo '⚠️  Mutation testing takes 5-10 minutes. Use specific targets for faster results.' && stryker run",
    "test:mutation:auth": "stryker run --mutate src/auth/auth.service.ts",
    "test:mutation:products": "stryker run --mutate src/products/products.service.ts",
    "test:mutation:quick": "stryker run --mutate src/auth/auth.service.ts --concurrency 2",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d src/config/typeorm.config.ts",
    "schema:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:drop -d src/config/typeorm.config.ts",
    "schema:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync -d src/config/typeorm.config.ts",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeds/run-seeds.ts",
    "docker:dev": "docker-compose up --build",
    "docker:dev:down": "docker-compose down --remove-orphans",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "docker:clean": "docker system prune -af && docker volume prune -f",
    "docker:logs": "docker-compose logs -f app",
    "dev:setup": "./scripts/dev-setup.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "test:utils": "./scripts/test-utils.sh",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "deps:update": "npm update && npm audit fix",
    "deps:check": "npm outdated",
    "quality:check": "npm run lint:check && npm run test:cov && npm run security:audit",
    "ci:pipeline": "npm run quality:check && npm run test:e2e",
    "health:check": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.26",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@stryker-mutator/core": "^9.1.1",
    "@stryker-mutator/jest-runner": "^9.1.1",
    "@stryker-mutator/typescript-checker": "^9.1.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
